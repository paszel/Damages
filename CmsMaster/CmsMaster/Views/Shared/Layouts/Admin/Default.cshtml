<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/Content/images/Admin/cms-icon.png">
    <title>CMS Master</title>
    @Styles.Render("~/Content/Admin/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/Admin/js")
</head>
<body>
    <div class="navBar">
        <div id="titleDiv">
            <h1>PRZEMYSŁAWPIECHOTA.PL</h1>
        </div>
        <div id="adminActions">
            @Html.Partial("PartialViews/Admin/NavigationBar")
        </div>
    </div>
    <br/>
    <div id="content">
        <div class="menu">
            @Html.Partial("PartialViews/Admin/Menu")
        </div>
        <div class="content">
            <div id="breadCrumbs">
                <a href="/admin">strona główna</a> @RenderSection("BreadCrumbs", false)
            </div>
            @Html.Partial("PartialViews/Admin/Messages")
            @RenderBody()
        </div>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
