<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (Request.IsAuthenticated)
    {
        <div>
            <ul id="nav">
                <li>
                    <a href="#"><strong>@Html.Encode(User.Identity.Name)</strong></a>
                    <ul>
                        <li><a href="#">@Html.ActionLink("Wyloguj", "Logout", "Home")</a></li>
                        <li><a href="#">zmień hasło</a></li>
                        <li><a href="#">zmień email</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    }
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)
    <script>
        $("#nav").menu({ position: { at: "left bottom" } });
    </script>
    <style>
        .ui-menu {
            list-style: none;
            padding: 2px;
            margin: 0;
            display: block;
            outline: none;
        }

            .ui-menu .ui-menu {
                margin-top: -3px;
                position: absolute;
            }

            .ui-menu .ui-menu-item {
                display: inline-block;
                float: left;
                margin: 0;
                padding: 0;
                width: auto;
            }

            .ui-menu .ui-menu-divider {
                margin: 5px -2px 5px -2px;
                height: 0;
                font-size: 0;
                line-height: 0;
                border-width: 1px 0 0 0;
            }

            .ui-menu .ui-menu-item a {
                text-decoration: none;
                display: block;
                padding: 2px .4em;
                line-height: 1.5;
                zoom: 1;
                font-weight: normal;
            }

                .ui-menu .ui-menu-item a.ui-state-focus,
                .ui-menu .ui-menu-item a.ui-state-active {
                    font-weight: normal;
                    margin: -1px;
                }

            .ui-menu .ui-state-disabled {
                font-weight: normal;
                margin: .4em 0 .2em;
                line-height: 1.5;
            }

                .ui-menu .ui-state-disabled a {
                    cursor: default;
                }

            .ui-menu:after {
                content: ".";
                display: block;
                clear: both;
                visibility: hidden;
                line-height: 0;
                height: 0;
            }
    </style>
</body>
</html>
